{
  "manifest_version": 3,
  "name": "Your copilot for every page you visit",
  "description": "Your copilot for every page you visit - AI assistant that understands any webpage.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "identity",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
        "default_title": "Your copilot for every page you visit"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "options_page": "options.html",
  "oauth2": {
    "client_id": "701677227593-8sqmu7v9h8t8geepqiklt7d69stdh2jc.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
        "description": "Open Your Copilot"
    }
  }
}
